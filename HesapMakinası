import java.util.Scanner;

public class HesapMakinesi {
    public static void main(String[] args) {
        int islem,sayi1,sayi2;
        double sonuc;
        Scanner input =new Scanner(System.in);
        System.out.println("Toplama için :1" +
                "Çıkarma için :2" +
                "Bolme içiçn :3" +
                "Çarpma için :4");
        islem=input.nextInt();
        System.out.println("Birinci Sayiyi Giriniz : ");
        sayi1=input.nextInt();
        System.out.println("İkinci Sayiyi Giriniz : ");
        sayi2=input.nextInt();
        switch (islem){

            case 1: // Toplama
                sonuc=sayi1+sayi2;
                System.out.println(sonuc);
                break;
            case 2: // cıkarma
                sonuc=sayi1-sayi2;
                System.out.println(sonuc);

                break;
            case 3: //Bolme
                sonuc=sayi1/sayi2;
                System.out.println(sonuc);

                break;
            case 4: //Carpma
                sonuc=sayi1*sayi2;
                System.out.println(sonuc);

                break;
            default:
                break;


        }

    }
}
